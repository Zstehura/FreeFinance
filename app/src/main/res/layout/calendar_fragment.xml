<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder"
    android:outlineProvider="none">

    <LinearLayout
        android:id="@+id/Row1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cal_row_size"
        android:background="@drawable/customborder"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cal_row_size"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/Row1"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:id="@+id/Box1_1"
            android:layout_width="@dimen/cal_column_size"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Box1_2"
            android:layout_width="@dimen/cal_column_size"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Box1_3"
            android:layout_width="@dimen/cal_column_size"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Box1_4"
            android:layout_width="@dimen/cal_column_size"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Box1_5"
            android:layout_width="@dimen/cal_column_size"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Box1_6"
            android:layout_width="@dimen/cal_column_size"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Box1_7"
            android:layout_width="@dimen/cal_column_size"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>